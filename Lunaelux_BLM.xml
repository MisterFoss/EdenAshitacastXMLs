	<variables>
		
		<var name="Melee1H">0</var>
		<var name="Melee2H">0</var>
		<var name="MeleeDW">0</var>
		<var name="MDTSetActive">0</var>
		<var name="PDTSetActive">0</var>

	</variables>


	<inputcommands>

		<!-- Resets All Toggles to Default! -->
		<cmd input="/resetall">
			<setvar name="Melee1H" value="0" />
			<setvar name="Melee2H" value="0" />
			<setvar name="MeleeDW" value="0" />
			<setvar name="MDTSetActive" value="0" />
			<setvar name="PDTSetActive" value="0" />
			<addtochat color="57">Reset to initial settings.</addtochat>
		</cmd>

		<!-- Melee mode toggles -->
		<cmd input="/1h">
			<setvar name="Melee2H" value="0" />
			<setvar name="MeleeDW" value="0" />
			<if advanced="$Melee1H=0">
				<setvar name="Melee1H" value="1" />
				<addtochat color="57">1H mode enabled!</addtochat>
			</if>
			<else>
				<setvar name="Melee1H" value="0" />
				<addtochat color="57">1H mode disabled.</addtochat>
			</else>
		</cmd>

		<cmd input="/2h">
			<setvar name="Melee1H" value="0" />
			<setvar name="MeleeDW" value="0" />
			<if advanced="$Melee2H=0">
				<setvar name="Melee2H" value="1" />
				<addtochat color="57">2H mode enabled!</addtochat>
			</if>
			<else>
				<setvar name="Melee2H" value="0" />
				<addtochat color="57">2H mode disabled.</addtochat>
			</else>
		</cmd>

		<cmd input="/dw">
			<setvar name="Melee1H" value="0" />
			<setvar name="Melee2H" value="0" />
			<if advanced="$Melee1H=0">
				<setvar name="MeleeDW" value="1" />
				<addtochat color="57">Dual Wield mode enabled!</addtochat>
			</if>
			<else>
				<setvar name="MeleeDW" value="0" />
				<addtochat color="57">Dual Wield mode disabled.</addtochat>
			</else>
		</cmd>

		<!-- MDT set toggle -->
		<cmd input="/mdt">

			<setvar name="PDTSetActive" value="0" />
			<if advanced="$MDTSetActive=0">
				<setvar name="MDTSetActive" value="1" />
				<addtochat color="57">MDT set enabled!</addtochat>
			</if>
			<else>
				<setvar name="MDTSetActive" value="0" />
				<addtochat color="57">MDT set disabled.</addtochat>
			</else>
		</cmd>

		<!-- PDT set toggle -->
		<cmd input="/pdt">

			<setvar name="MDTSetActive" value="0" />
			<if advanced="$PDTSetActive=0">
				<setvar name="PDTSetActive" value="1" />
				<addtochat color="57">PDT set enabled!</addtochat>
			</if>
			<else>
				<setvar name="PDTSetActive" value="0" />
				<addtochat color="57">PDT set disabled.</addtochat>
			</else>
		</cmd>

	</inputcommands>


	<premagic>
		<equip set="Precast" />
	</premagic>

	<midmagic>
		<if advanced="$Melee1H=1">
			<equip set="Melee-1H" lock="true"/>
		</if>

		<elseif advanced="$Melee2H=1">
			<equip set="Melee-2H" lock="true"/>
		</elseif>

		<elseif advanced="$MeleeDW=1">
			<equip set="Melee-DW" lock="true"/>
		</elseif>
		
		<elseif ad_name="Sleep*|Drain|Aspir|Blind|Bio*">
			<equip set="Dark-acc" lock="true"/>
		</elseif>
		
		<elseif ad_name="Slow*|Rasp|Stone|Stone I*|Stonega*|quake*">
			<equip set="Earth-acc" lock="true"/>
		</elseif>	
		
		<elseif ad_name="Paralyze*|Bind|Frost|Blizzard*|Blizzaga*|Freeze*">
 			<equip set="Ice-acc" lock="true"/>
		</elseif>
		
		<elseif ad_name="Silence|Choke|Gravity|Aero*|Aeroga*|Tornado*">
			<equip set="Wind-acc" lock="true"/>
		</elseif>
		
		<elseif ad_name="Poison*|Drown|Water*|Waterga*|Flood*">
			<equip set="Water-acc" lock="true"/>
		</elseif>
		
		<elseif ad_name="Burn|Fire*|Firaga*|Flare*">
			<equip set="Fire-acc" lock="true"/>
		</elseif>

		<elseif ad_name="Dia*|Repose|Banish*|Holy">
			<equip set="Light-acc" lock="true"/>
		</elseif>
		
		<elseif ad_name="Stun|Shock|Thunder*|Thundaga*|Burst*">
			<equip set="Thunder-acc" lock="true"/>
		</elseif>
		
		<if ad_type="whitemagic">
			<if ad_skill="healingmagic">
