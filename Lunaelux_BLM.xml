			<equip set="MDT" />
			<if p_ismoving="True">
				<equip set="Movement" />
			</if>
		</elseif>

		<elseif advanced="$PDTSetActive=1">
			<equip set="PDT"/>
			<if p_ismoving="True">
				<equip set="Movement" />
			</if>
		</elseif>		

		<else>

			<equip set="Idle" />
 			<if e_area="Windurst*|Port Windurst">
				<equip set="Town" />
			</if>
			
			<if eq_main="Warp Cudgel|trick Staff II|treat staff II">
				<equip lock="true">
