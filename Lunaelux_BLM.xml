						<command delay="1400">/cancel 71</command>
					</if>
				</elseif>

				<elseif ad_name="Invisible">
					<equip set="Haste">
						<back>Skulker's cape</back>
					</equip>
				</elseif>
			<elseif ad_skill="enhancingmagic">
	
				<if ad_name="Stoneskin">
					<equip set="Stoneskin"/>
				</if>

				<else>
					<equip set="Haste" />
				</else>

			</elseif>

			<elseif ad_skill="enfeeblingmagic">
				<equip set="Enfeeble-MND"/>
			</elseif>
			
			<else>
				<equip set="Haste" />
			</else>
		</if>
		
		<elseif ad_type="blackmagic">
			<if ad_skill="darkmagic">
				<if ad_name="Drain|Aspir*|Bio*">
					<equip set="DarkMagic" />
				</if>
				<elseif>
					<equip set="Enfeeble-INT" />
				</elseif>
				<else>
					<equip set="Haste" />
				</else>
			</if>

			<elseif ad_skill="ElementalMagic">
				<equip set="Elemental"/>
				<if ad_name="Rasp|Drown|Frost|Burn|Choke|Shock">
					<equip set="Elem_Debuffs"/>
				</if>
				<elseif advanced="%ad_element=%e_dayelement">
					<equip lock="true">
						<legs>Sorcerer's Tonban</legs>
					</equip>
					<equip set="%ad_element-belt"/>
				</elseif>	
				<elseif advanced="%ad_element=%e_weatherelement">
					<equip set="%ad_element-belt"/>	
				</elseif>


			</elseif>

			<elseif ad_skill="enfeeblingmagic">
                <equip set="Enfeeble-INT"/>
			</elseif>
			<else>
				<equip set="Haste"/>
			</else>
		</elseif>
		
		<else>
			<equip set="Haste"/>
		</else>

		<if advanced="%ad_element=%e_dayelement">
			<equip lock="true">
				<legs>Sorcerer's Tonban</legs>
			</equip>
			<addtochat color="200">%ad_element-belt</addtochat>
			<equip set="%ad_element-belt"/>
		</if>	
		<elseif advanced="%ad_element=%e_weatherelement">
			<equip set="%ad_element-belt"/>	
		</elseif>
	</midmagic>

