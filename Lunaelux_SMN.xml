	<!--
	 IMPORTANT CODE BELOW  
	 DO NOT TOUCH UNLESS YOU KNOW WHAT YOU'RE DOING! 
	-->
 
        
    <variables>
        <var name="IdleSet">DT</var>
        <var name="MDTSetActive">0</var>
        <var name="PDTSetActive">0</var>
    </variables>
       
    <inputcommands>
        <cmd input="/killall">
            <setvar name="Set" value="LowAcc" />
            <setvar name="IdleSet" value="DT" />
            <setvar name="MDTSetActive" value="0" />
            <setvar name="PDTSetActive" value="0" />
            <addtochat color="57">Reset it all!</addtochat>
        </cmd>      
        
        <!-- Report macro to see what your current settings are -->
        <cmd input="/report">
                <addtochat color="57">Idle: [$IdleSet], TP: [$Set]</addtochat>
        </cmd>      
 
 
 
        <!-- Use "/idleset Refresh", "/idleset DT", etc in macros -->
        <cmd input="/idleset ">
                         <setvar name="IdleSet" value="%arg1" />
            <addtochat color="159">Idle set: [$IdleSet]</addtochat>
        </cmd>
 
        <!-- MDT set toggle -->
        <!-- As stated, you can alter the command input below if you wish -->
        <cmd input="/mdt">
 
            <setvar name="PDTSetActive" value="0" />
            <if advanced="$MDTSetActive=0">
                <setvar name="MDTSetActive" value="1" />
                <addtochat color="57">MDT set enabled!</addtochat>
            </if>
            <else>
                <setvar name="MDTSetActive" value="0" />
                <addtochat color="57">MDT set disabled.</addtochat>
            </else>
        </cmd>
        
        <!-- PDT set toggle -->
        <!-- As stated, you can alter the command input below if you wish -->
        <cmd input="/pdt">
 
            <setvar name="MDTSetActive" value="0" />
            <if advanced="$PDTSetActive=0">
                <setvar name="PDTSetActive" value="1" />
                <addtochat color="57">PDT set enabled!</addtochat>
            </if>
            <else>
                <setvar name="PDTSetActive" value="0" />
                <addtochat color="57">PDT set disabled.</addtochat>
            </else>
        </cmd>         
        
        
    </inputcommands>
          
