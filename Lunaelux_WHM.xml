	<variables>
		<var name="Melee1H">0</var>
		<var name="Melee2H">0</var>
		<var name="MeleeDW">0</var>
		<var name="MDTSetActive">0</var>
		<var name="PDTSetActive">0</var>
		<var name="MaxHP">0</var>
	</variables>


	<inputcommands>

		<!-- Resets All Toggles to Default! -->
		<cmd input="/resetall">
			<setvar name="Melee1H" value="0" />
			<setvar name="Melee2H" value="0" />
			<setvar name="MeleeDW" value="0" />
			<setvar name="MDTSetActive" value="0" />
			<setvar name="PDTSetActive" value="0" />
			<setvar name="MaxHP" value="0" />
			<addtochat color="57">Reset to initial settings.</addtochat>
		</cmd>

		<!-- Melee mode toggles -->
		<cmd input="/1h">
			<setvar name="Melee2H" value="0" />
			<setvar name="MeleeDW" value="0" />
			<if advanced="$Melee1H=0">
				<setvar name="Melee1H" value="1" />
				<addtochat color="57">1H mode enabled!</addtochat>
			</if>
			<else>
				<setvar name="Melee1H" value="0" />
				<addtochat color="57">1H mode disabled.</addtochat>
			</else>
		</cmd>

		<cmd input="/2h">
			<setvar name="Melee1H" value="0" />
			<setvar name="MeleeDW" value="0" />
			<if advanced="$Melee2H=0">
				<setvar name="Melee2H" value="1" />
				<addtochat color="57">2H mode enabled!</addtochat>
			</if>
			<else>
				<setvar name="Melee2H" value="0" />
				<addtochat color="57">2H mode disabled.</addtochat>
			</else>
		</cmd>

		<cmd input="/dw">
			<setvar name="Melee1H" value="0" />
			<setvar name="Melee2H" value="0" />
			<if advanced="$Melee1H=0">
				<setvar name="MeleeDW" value="1" />
				<addtochat color="57">Dual Wield mode enabled!</addtochat>
			</if>
			<else>
				<setvar name="MeleeDW" value="0" />
				<addtochat color="57">Dual Wield mode disabled.</addtochat>
			</else>
		</cmd>

		<!-- MDT set toggle -->
		<cmd input="/mdt">

			<setvar name="PDTSetActive" value="0" />
			<setvar name="MaxHP" value="0" />
			<if advanced="$MDTSetActive=0">
				<setvar name="MDTSetActive" value="1" />
				<addtochat color="57">MDT set enabled!</addtochat>
			</if>
			<else>
				<setvar name="MDTSetActive" value="0" />
				<addtochat color="57">MDT set disabled.</addtochat>
			</else>
		</cmd>

		<!-- PDT set toggle -->
		<cmd input="/pdt">

			<setvar name="MDTSetActive" value="0" />
			<setvar name="MaxHP" value="0" />
			<if advanced="$PDTSetActive=0">
				<setvar name="PDTSetActive" value="1" />
				<addtochat color="57">PDT set enabled!</addtochat>
			</if>
			<else>
				<setvar name="PDTSetActive" value="0" />
				<addtochat color="57">PDT set disabled.</addtochat>
			</else>
		</cmd>

		<!-- MaxHP set toggle -->
		<cmd input="/maxhp">

			<setvar name="MDTSetActive" value="0" />
			<setvar name="PDTSetActive" value="0" />
			<if advanced="$MaxHP=0">
				<setvar name="MaxHP" value="1" />
				<addtochat color="57">MaxHP set enabled!</addtochat>
			</if>
			<else>
				<setvar name="MaxHP" value="0" />
				<addtochat color="57">MaxHP set disabled.</addtochat>
			</else>
		</cmd>
	</inputcommands>


	<premagic>
		<equip set="Precast" />

		<if ad_name="Cure*|Cura*">
			<equip>
				<feet>Cure Clogs</feet>
			</equip>
		</if>
	</premagic>


	<midmagic>

		<if advanced="$Melee1H=1">
			<equip set="Melee-1H" lock="true"/>
		</if>

		<elseif advanced="$Melee2H=1">
			<equip set="Melee-2H" lock="true"/>
		</elseif>

		<elseif advanced="$MeleeDW=1">
			<equip set="Melee-DW" lock="true"/>
		</elseif>
		
		<elseif ad_name="Sleep*|Drain|Aspir|Blind|Bio">
			<equip set="Dark-acc" lock="true"/>
		</elseif>
		
		<elseif ad_name="Slow*|Rasp|Stone|Stone I*|Stonega*">
			<equip set="Earth-acc" lock="true"/>
		</elseif>	
		
		<elseif ad_name="Paralyze*|Bind|Frost|Blizzard*|Blizzaga*">
			<equip set="Ice-acc" lock="true"/>
		</elseif>
		
		<elseif ad_name="Silence|Choke|Gravity|Aero*|Aeroga*">
			<equip set="Wind-acc" lock="true"/>
		</elseif>
		
		<elseif ad_name="Poison*|Drown|Water|Waterga*">
			<equip set="Water-acc" lock="true"/>
		</elseif>
		
		<elseif ad_name="Burn|Fire*|Firaga*">
			<equip set="Fire-acc" lock="true"/>
		</elseif>
		
		<elseif ad_name="Stun|Shock|Thunder*|Thundaga*">
			<equip set="Thunder-acc" lock="true"/>
		</elseif>
		
		<elseif ad_name="Dia*|Repose|Banish*|Holy">
			<equip set="Light-acc" lock="true"/>
		</elseif>
		
		<if advanced="$MaxHP=1">
			<equip set="HP" lock="true"/>
		</if>
		
		<elseif ad_type="whitemagic">
			<if ad_skill="healingmagic">
<if ad_name="Cure*|Cura*">
	<if advanced="(%p_hpp&lt;75)">
		<equip set="Cure">
			<ring1>Medicine Ring</ring1>
		</equip>
	</if>
	<else>
		<equip set="Cure"/>
	</else>
</if>
				<elseif ad_name="*na">
					<if ad_name="Cursna">
						<equip set="Cursna"/>
					</if>
				</elseif>
				<else>
					<equip set="Haste"/>
				</else>
			</if>

			<elseif ad_skill="divinemagic">
				<equip set="DivineMagic"/>
				<if ad_skill="Repose">
					<equip set="Repose"/>
				</if>
			</elseif>

			<elseif ad_skill="enhancingmagic">
		
				<if ad_name="Stoneskin">
					<equip set="Stoneskin"/>
				</if>

				<elseif ad_name="regen*">
					<equip>
						<body>Cleric's Briault</body>
					</equip>

				</elseif>

				<elseif ad_name="Bar*">
					<equip set="Barspells" />
				</elseif>

				<elseif ad_name="Sneak">
					<equip set="Haste">
						<feet>Dream boots +1</feet>
						<back>Skulker's cape</back>
					</equip>
					<if advanced="%at_type=self">
						<command delay="1400">/cancel 71</command>
					</if>
				</elseif>

				<elseif ad_name="Invisible">
					<equip set="Haste">
						<back>Skulker's cape</back>
					</equip>
				</elseif>

				<else>
					<equip set="Haste" />
				</else>

			</elseif>

			<elseif ad_skill="enfeeblingmagic">
				<equip set="Enfeeble-MND" />
			</elseif>
			
			<else>
				<equip set="Haste" />
			</else>
		</elseif>
		
		<elseif ad_type="blackmagic">
			<if ad_skill="darkmagic">
				<if ad_name="Drain|Aspir*|Bio*">
					<equip set="DarkMagic" />
				</if>
				<elseif>
					<equip set="Enfeeble-INT" />
				</elseif>
				<else>
					<equip set="Haste" />
				</else>
			</if>

			<elseif ad_skill="ElementalMagic">
				<equip set="Elemental"/>
			</elseif>

			<elseif ad_skill="enfeeblingmagic">
                <equip set="Enfeeble-INT"/>
			</elseif>
			<else>
				<equip set="Haste"/>
			</else>

		</elseif>
		<else>
			<equip set="Haste"/>
		</else>
	</midmagic>

	<preranged>

		<equip>
			<range></range>
		</equip>

	</preranged>
 
	<idlegear>
	
		<if advanced="$Melee1H=1">
			<equip set="Melee-1H" lock="true"/>
		</if>

		<elseif advanced="$Melee2H=1">
			<equip set="Melee-2H" lock="true"/>
		</elseif>

		<elseif advanced="$MeleeDW=1">
			<equip set="Melee-DW" lock="true"/>
		</elseif>
		
		<if advanced="$MaxHP=1">
			<equip set="HP" lock="true"/>
		</if>
		
		<elseif p_status="resting">
			<equip set="Resting"/>		
		</elseif>

		<elseif p_status="engaged">
			<equip set="TP-Set"/>
		</elseif>

		<elseif advanced="$MDTSetActive=1">
			<equip set="MDT" />
			<if p_ismoving="True">
				<equip set="Movement" />
			</if>
		</elseif>

		<elseif advanced="$PDTSetActive=1">
			<equip set="PDT"/>
			<if p_ismoving="True">
				<equip set="Movement" />
			</if>
		</elseif>		

		<else>

			<equip set="Idle" />
 			<if e_area="Windurst*|Port Windurst">
				<equip set="Town"/>
			</if>
			
			<if eq_main="Warp Cudgel|trick Staff II|treat staff II">
				<equip lock="true">
					<main>%eq_main</main>
				</equip>
			</if>		
			<if eq_head="Nomad cap">
				<equip>
					<head>%eq_head</head>
				</equip>
			</if>
			<if eq_body="Tidal Talisman">
				<equip>
					<body>%eq_body</body>
				</equip>
			</if>
			<if eq_ring1="Emperor Band|Homing Ring|Olduum Ring|Tavnazian Ring|Anniversary Ring">
				<equip lock="true">
					<ring1>%eq_ring1</ring1>
				</equip>
			</if>
			<if eq_ring2="Emperor Band|Homing Ring|Olduum Ring|Tavnazian Ring|Anniversary Ring">
				<equip lock="true">
					<ring2>%eq_ring2</ring2>
				</equip>
			</if>

			<if p_ismoving="True">
				<equip set="Movement" />
			</if>		

		</else>

	</idlegear>


	<jobability>

	</jobability>


	<weaponskill>

		<if ad_name="Mystic Boon">
			<equip set="MysticBoon" />
		</if>

		<elseif ad_name="Hexa Strike">
			<equip set="HexaStrike" />
		</elseif>

		<else>
			<equip set="WS" />
		</else>

	</weaponskill>


